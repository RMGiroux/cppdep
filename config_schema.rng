<grammar xmlns="http://relaxng.org/ns/structure/1.0"
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

  <start>
    <element name="cppdep">
      <oneOrMore> <ref name="package-group"/> </oneOrMore>
    </element>
  </start>

  <define name="package-group">
    <element name="package-group">
      <optional> <ref name="role"/> </optional>
      <ref name="name"/>
      <attribute name="path"> <data type="anyURI"/> </attribute>
      <oneOrMore>
        <choice>
          <ref name="path"/>
          <ref name="package"/>
        </choice>
      </oneOrMore>
    </element>
  </define>

  <define name="package">
    <element name="package">
      <ref name="name"/>
      <oneOrMore> <ref name="path"/> </oneOrMore>
    </element>
  </define>

  <define name="role">
    <attribute name="role">
      <choice>
        <value>internal</value>  <!-- The default. -->
        <value>external</value>
      </choice>
    </attribute>
  </define>

  <define name="name">
    <attribute name="name">
      <data type="normalizedString">  <!-- Non-empty w/o control characters -->
        <param name="minLength">1</param>
      </data>
    </attribute>
  </define>

  <define name="path">
    <choice>
      <element name="alias-path">  <!--An alias path to map to a name -->
        <data type="anyURI"/>
      </element>
      <element name="include-path">  <!-- The header search path, i.e., '-i' -->
        <data type="anyURI"/>  <!-- This is also an alias path. -->
      </element>
      <element name="src-path">  <!-- The path to source files to analyze -->
        <data type="anyURI"/>  <!-- This is also an alias path. -->
      </element>
      <element name="ignore-path">  <!-- Exclude from the source path -->
        <data type="anyURI"/>
      </element>
    </choice>
  </define>

</grammar>
