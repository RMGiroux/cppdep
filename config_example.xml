<cppdep>
  <package-group role="external" name="STD" path="/">
    <package name="C/C++ LIB">
      <path>/usr/include</path>
    </package>
  </package-group>
  <package-group name="Awesome" path="/path/to/awesome/project">
    <path>src</path>
    <package name="libFoo">
      <path>src/foo</path>
    </package>
    <package name="libBar">
      <path>src/bar</path>
      <path>src/baz</path>
    </package>
  </package-group>
</cppdep>
