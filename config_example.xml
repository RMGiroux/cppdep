<cppdep>
  <package-group role="external" name="STD" path="/usr/include">
    <package name="System">
      <include-path/>
    </package>
    <package name="Boost">
      <alias-path>boost</alias-path>
    </package>
  </package-group>
  <package-group name="Awesome" path="/path/to/awesome/project">
    <include-path/>  <!-- The project group root path -->
    <src-path>src</src-path>
    <package name="libFoo">
      <alias-path>src/foo</alias-path>
    </package>
    <package name="libBar">
      <alias-path>src/bar</alias-path>
      <alias-path>src/baz</alias-path>
    </package>
  </package-group>
</cppdep>
